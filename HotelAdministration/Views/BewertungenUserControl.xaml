<UserControl x:Class="HotelAdministration.Views.BewertungenUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotelAdministration.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Mitarbeiterübersicht" FontSize="22" VerticalAlignment="Center" Margin="10"/>

        <!-- Add Mitarbeiter -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Neuen mitarbeiter einfügen" FontSize="17" VerticalAlignment="Top" Margin="10"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            
        </StackPanel>


</Grid>
</UserControl>
